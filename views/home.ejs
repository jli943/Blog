<%- include('partials/header.ejs'); -%>
<h1>Home</h1>
<p><%= homeContent %></p>

    <% posts.forEach(function(post){ %>
        <h1> <%= post.title %></h1>
    <%  var postBody = post.content; %>
    <%  if(postBody.length>10){%>
        <%    postBody = postBody.substring(0,10)+"....";%>
    <%  }%>
        <p> <%= postBody  %><a href="/posts/<%= post._id %>"> Read More</a></p>
        <% }); %>

